<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 offset-4">
      <h1>Edit task</h1>
      <%= form_for(@task) do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class:"form-control"%>
        </div>
        <div class="form-group">
          <%= f.label :details %>
          <%= f.text_field :details, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :completed, "Mark as completed" %>
          <%= f.check_box :completed, class:"form-control" "a"%>
        </div>
        <%= f.submit "Update", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
