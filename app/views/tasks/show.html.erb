<div class="container">
  <h2> <%= @task.title %> </h2>
  <div class="description">
    <p> <%= @task.details %> </p>
  </div>
  <p>
    <input type="checkbox" <%= "checked" if @task.completed %> >
    <%= @task.completed ? "This task is completed" : "This task is not completed yet" %>
  </p>
  <%= link_to "Edit the task", edit_task_path %>
  <hr>
  <%= link_to "Go back to tasks", tasks_path %>
</div>
